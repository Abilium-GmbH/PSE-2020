<odoo>
    <data>
        <record id="view_project_tree" model="ir.ui.view">
          <field name="name">project.project.tree</field>
          <field name="model">project.project</field>
          <field name="priority" eval="8"/>
          <field name="arch" type="xml">
              <tree string="Projects">
                  <field name="name"/>
                  <field name="active"/>
                  <field name="total_planed_workload"/>
              </tree>
          </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_projects">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="view_project_tree"/>
        </record>
        <menuitem id="menu_resource_projects" name="Projects" parent="menu_resource"
                  action="action_view_projects"/>
    </data>
</odoo>


